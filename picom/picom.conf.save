corner-radius = 1;

shadow = true;
shadow-radius = 13;
shadow-offset-x = -12;
shadow-offset-y = -12;
shadow-opacity = 0.8;
shadow-red = 0.0;
shadow-green = 0.0;
shadow-blue = 0.0;

shadow-exclude = [
"name = 'stalonetray'",
"name = 'polybar'",
"name = 'plank'",
"name = 'Notification'",
"name = 'VirtualBox'",
"class_g = 'Bspwm'",
"class_i = 'presel_feedback'",
"class_g = 'Conky'",
"class_g ?= 'Notify-osd'",
"class_g = 'Cairo-clock'",
"class_i = 'POWERPNT.EXE'",
"class_i = 'WINWORD.EXE'",
"class_i = 'Meteo'"
];

shadow-ignore-shaped = false;
inactive-opacity = 1;
active-opacity = 1.0;
frame-opacity = 1.0;
inactive-opacity-override = false;
opacity-rule = [
"10:class_g = 'Bspwm'",
"10:class_i = 'presel_feedback'",
];

wintypes :
{
popup_menu =
{
opacity = .9;
};
dropdown_menu =
{
opacity = .9;
};
dnd =
{
shadow = false;
};
dock =
{
shadow = true;
};
tooltip =
{
fade = false;
shadow = true;
opacity = 0.75;
focus = true;
};
};

fading = true
fade-in-step = 0.28;
fade-out-step = 0.28;
fade-delta = 20;

